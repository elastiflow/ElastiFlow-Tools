            read -p "Do you want to reload and restart flowcoll.service? (y/n): " reload_choice
            if [[ $reload_choice == "y" ]]; then
              reload_and_restart_service "flowcoll.service"
              check_service_health
            fi
            ;;
          13)
            restore_latest_backup
            read -p "Do you want to reload and restart flowcoll.service? (y/n): " reload_choice
